n = int(input("Enter the no of terms? "))

n1, n2 = 0, 1
c = 0

if n <= 0:
   print("positive integer is allowed")
# if there is only one term, return n1
elif n == 1:
   print("Fibonacci sequence upto",n,":")
   print(n1)
else:
   print("Fibonacci sequence is:")
   while c < n:
       print(n1)
       nth = n1 + n2
       n1 = n2
       n2 = nth
       c += 1
